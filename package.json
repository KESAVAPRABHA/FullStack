{
    "name": "book-search",
    "version": "1.0.0",
    "description": "A React-based Google Books Search app with helper/util functions and React Hooks to query and display books based on user searches. It also uses Node, Express and MongoDB so that users can save books to review or purchase later.",
    "main": "server.js",
    "scripts": {
        "start": "node server/server.js",
        "start:server": "nodemon server/server.js",
        "start:client": "cd client && yarn start",
        "dev": "concurrently \"yarn run start:server\" \"yarn run start:client\"",
        "install": "cd client && yarn",
        "build": "cd client && npm run build",
        "heroku-postbuild": "npm run build"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "express": "^4.17.1",
        "mongodb": "^3.6.3",
        "mongoose": "^5.11.7",
        "yarn": "^1.22.10"
    }
}
